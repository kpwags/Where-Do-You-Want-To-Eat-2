@model WhereDoYouWantToEat2.ViewModel.EditProfile
@{
    ViewData["Title"] = "Edit Profile";
    ViewData["ActiveAccountPage"] = "profile";
}

<div class="row">
    <div class="col-md-4">
        <partial name="_AccountSidebar" />
    </div>
    <div class="col-md-6">
        <h2 class="mb-3">Edit Profile</h2>

        <partial name="_SuccessMessage" model="@Model.SuccessMessage" />
        <partial name="_ErrorMessage" model="@Model.ErrorMessage" />

        <form asp-action="EditProfile" class="mt-3">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</div>