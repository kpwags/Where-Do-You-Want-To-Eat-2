@model wheredoyouwanttoeat2.ViewModel.DeleteAccount

@{
    ViewData["Title"] = "Download Your Data";
    ViewData["ActiveAccountPage"] = "deleteaccount";
}

<div class="row">
    <div class="col-md-4">
        <partial name="_AccountSidebar" />
    </div>
    <div class="col-md-6">
        <h2>Delete Your Account</h2>

        <p>We're sorry to see you go. Deleting your account is permanent and <strong>cannot be undone</strong>. If you're sure this is what you want to do, please enter your password and click 'Delete Account'</p>

        <form asp-action="DeleteAccount" class="mt-3" onsubmit="return confirm('Are you sure you want to delete your account?');">
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-danger">Delete Account</button>
        </form>
    </div>
</div>